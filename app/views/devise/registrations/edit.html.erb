<h2>Edit <%= resource_name.to_s.humanize %></h2>
<br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-field" %>
  </div>
  <br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "login-field" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <br>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login-field" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "login-field" %>
  </div>
  <br>
    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "name", class: "login-field" %>
  </div>
<br>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, autocomplete: "bio", class: "login-field" %>
  </div>
<br>
  <div class="field">
    <%= f.label "Image URL" %><br />
    <%= f.url_field :image, autocomplete: "image", class: "login-field" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
<br><br>

<h3>Cancel my account</h3>

<p>Unhappy? Ok, bye I guess... <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></p>

<%= link_to "Back", posts_path, :class => "btn btn-primary" %>
<br><br>
