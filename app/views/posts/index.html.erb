<% @posts.each do |post| %>
<div class="row">
    <div class="col-sm-3">
        <div class="well">
           <p><%= post.user.name %></p>
           <img src=post.user.image class="img-circle" height="55" width="55" alt="Avatar">
        </div>
    </div>
    <div class="col-sm-9">
          <div class="well">
            <% if post.image %>
                <p><%= image_tag post.image, class: "img-fluid" %></p>
            <% end %>
            <p><%= post.title %></p>
            <p><%= post.content %></p>
            <br>
            <%= form_with model: @comment do |f| %>
                <%= f.text_area :content %>
                <%= f.submit "Add Comment"%>
            <% end %>
            <% post.comments.each do |comment| %>
                <p><%= comment.content %></p>
            <% end %>
          </div>
    </div>
</div>
<% end %>
