<div class="col-sm-12">
    <div class="post-inner-box">
        <div class="post-comment-box">
            <p><%= @post.content %></p>
        </div> 
        <% if @post.image %>
            <%= link_to @post do %>
                <p><%= image_tag @post.image, class: "post-img" %></p>
            <% end %>
        <% end %>
        
        <br>
        <%= bootstrap_form_for [@post, @comment], bootstrap: {layout: "vertical"} do |f| %>
            <%= f.text_area :content, placeholder: "Add a comment...", bootstrap: {label: {hide: true}} %>          
            <%= f.submit "Post Comment", bootstrap: {layout: "vertical"}%>
        <% end %>
        <div class="post-comment-box">
            <h4>Comments</h4>
            <% @post.comments.each do |comment| %>                      
                <p><%= comment.user.name %> said: <%= comment.content %></p>                    
            <% end %>
        </div>
        <%= button_to "Like", add_likes_path(@post), :method => :patch, :class => "btn-info"  %> <h5>Likes: <%= @post.likes %></h5>
    </div>
</div>

<% if @post.user_id == current_user.id %>
    <%= button_to "Edit Post", edit_post_path, method: :get %><br>
    <%= button_to "Delete Post", @post, method: :delete %><br>
<% end %>