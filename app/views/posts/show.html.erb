<%= @post.title %><br><br>
<%= @post.content %><br><br>
<% if @post.image %>
    <%= image_tag @post.image %><br>
<% end %>
<%= render 'comments/form' %>

<% @post.comments.each do |post| %>
    <p><%= post.user.name %> said: <%= post.content %></p>
<% end %>

<%= button_to "Edit", edit_post_path, method: :get %><br>
<%= button_to "Delete", @post, method: :delete %>