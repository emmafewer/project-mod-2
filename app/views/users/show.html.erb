<div class="row"> 
    <div class="col-sm-12">
        <div class="post-container">
            <div class="col-sm-12">
                <% if @user.image %>
                    <%= image_tag @user.image, class: "img-circle", height:"65", width:"65", alt:"Avatar"%>
                <% end %>
                <h2><%= @user.name %></h2>
                <% if @user.id == current_user.id %>
                    <div class="d-flex justify-content-between">
                        <span class="btn btn-primary">
                            <%= link_to 'Create Post', new_post_path, :class => "btn-primary" %> 
                        </span>
                        <span class="btn btn-info">
                            <%= link_to 'Add Pet', new_pet_path, :class => "btn-info" %> 
                        </span>
                        <span class="btn btn-warning">
                            <%= link_to "Edit Or Delete Profile", edit_user_registration_path, method: :get, :class => "btn-warning" %>
                        </span><br><br>
                    </div>
                <% end %>
            </div>
            
            <h5>Bio: <%= @user.bio %></h5><br>
            Pets: <% @user.pets.each do |pet| %>
                <p><%= link_to pet.name, pet %></p>
            <% end %><br>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <% @user.posts.each do |post| %>
            <div class="post-container">
                 <div class="post-content-box">
                     <p><%= post.content %></p>
                </div> 
                <%= link_to post do %>
                    <%= image_tag post.image, class: "post-img" %>
                <% end %>
               <br>
                <%= bootstrap_form_for [post, @comment], bootstrap: {layout: "vertical"} do |f| %>
                    <%= f.text_area :content, placeholder: "Add a comment...", bootstrap: {label: {hide: true}} %>          
                    <%= f.submit "Post Comment", bootstrap: {layout: "vertical"}%>
                <% end %>
                <div class="post-comment-box">
                    <h4>Comments</h4>
                    <% post.comments.each do |comment| %>                      
                        <p><%= comment.user.name %> said: <%= comment.content %></p>                    
                    <% end %>
                </div>
                <%= button_to "Like", add_likes_path(post), :method => :patch, :class => "btn btn-info"  %> <h5>Likes: <%= post.likes %></h5>
            </div> 
        <% end %>
    </div>        
</div>



